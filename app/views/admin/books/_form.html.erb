<!-- =========================================================
  Partial: Admin / Books フォーム
  File: app/views/admin/books/_form.html.erb
  ---------------------------------------------------------
  目的:
    - Book の新規作成 / 編集フォーム
  構成:
    1) エラーメッセージ
    2) タイトル入力
    3) 説明入力
    4) 並び順（position）
    5) ボタン群
========================================================= -->

<%= form_with model: @book,
              url: (@book.new_record? ? admin_books_path : admin_book_path(@book)),
              method: (@book.new_record? ? :post : :patch),
              class: "space-y-4" do |f| %>

  <!-- =======================
       1) エラーメッセージ表示
       - バリデーションエラーがある場合に表示
  ======================= -->
  <% if @book.errors.any? %>
    <div class="rounded border border-red-300 bg-red-50 p-3 text-sm text-red-700">
      <p><strong><%= @book.errors.count %></strong> 件のエラーがあります：</p>
      <ul class="list-disc pl-5 mt-1">
        <% @book.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- =======================
       2) タイトル入力
  ======================= -->
  <div>
    <%= f.label :title, class: "block text-sm text-slate-600" %>
    <%= f.text_field :title, class: "w-full rounded border px-3 py-2" %>
  </div>

  <!-- =======================
       3) 説明入力
  ======================= -->
  <div>
    <%= f.label :description, class: "block text-sm text-slate-600" %>
    <%= f.text_area :description, rows: 5, class: "w-full rounded border px-3 py-2" %>
  </div>

  <!-- =======================
       4) 並び順（position）
       - 書籍の並び順を指定
  ======================= -->
  <div>
    <%= f.label :position, "並び順（章番号）", class: "block text-sm text-slate-600" %>
    <%= f.number_field :position, min: 1, step: 1, class: "w-full max-w-40 rounded border px-3 py-2" %>
    <p class="mt-1 text-xs text-slate-500">1, 2, 3… の昇順で表示されます（重複不可）。</p>
  </div>

  <!-- =======================
       5) 送信ボタン + 戻るリンク
  ======================= -->
  <div class="flex gap-2">
    <%= f.submit (@book.new_record? ? "作成する" : "更新する"),
                 class: "px-4 py-2 rounded bg-slate-900 text-white" %>

    <%= link_to "一覧に戻る", admin_books_path,
                class: "px-4 py-2 rounded ring-1 ring-slate-300" %>
  </div>
<% end %>
