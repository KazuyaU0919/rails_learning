<!-- =========================================================
  Layout: Admin
  ---------------------------------------------------------
  ・管理画面用のベースレイアウト
  ・PWA/アイコン、Importmap、Quill をここで読込
  ・共通ナビ（admin/shared/nav）とフラッシュ、yield 本文
========================================================= -->

<!-- app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <!-- =======================
         ページタイトル
       ======================= -->
    <title><%= content_for?(:title) ? yield(:title) : "Admin | Rails Learning Test" %></title>

    <!-- =======================
         ビューポート & PWA 基本設定
       ======================= -->
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <!-- =======================
         Rails セキュリティメタ
       ======================= -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- =======================
         ページ固有 head スロット
       ======================= -->
    <%= yield :head %>

    <!-- =======================
         アイコン / PWA 関連
       ======================= -->
    <%= favicon_link_tag 'favicon.ico', rel: 'icon', type: 'image/x-icon' %>
    <link rel="manifest" href="/manifest.json">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">
    <meta name="theme-color" content="#CC0000">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- =======================
         CSS / JS (Importmap)
       ======================= -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- =======================
         外部ライブラリ（管理画面のみ）
         - Quill（WYSIWYG）
       ======================= -->
    <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>
  </head>

  <body class="bg-slate-50 text-slate-800">
    <!-- =======================
         ヘッダー（管理共通）
       ======================= -->
    <%= render "admin/shared/nav" %>

    <!-- =======================
         メインコンテンツ
       ======================= -->
    <main class="mx-auto max-w-5xl px-4 py-6">
      <%= render "shared/flash" %>
      <%= yield %>
    </main>
  </body>
</html>
